# Define deployment and service for ic.

apiVersion: apps/v1
kind: Deployment
metadata:
  name: fhirproxy
  labels:
    name: fhirproxy
spec:
  replicas: 1
  selector:
    matchLabels:
      app: fhirproxy
      tier: web
  template:
    metadata:
      labels:
        app: fhirproxy
        tier: web
    spec:
      containers:
        - name: fhirproxy
          image: gcr.io/{{.project_id}}/fhirproxy:latest
          ports:
            - containerPort: 8080
          env:
            - name: PROXY_PROJECT
              value: {{.project_id}}
            - name: FHIR_ISSUER
              value: {{.oidc_issuer}}
            - name: AUDIENCE
              value: {{.audience}}
            - name: PROXY_TO
              value: "https://healthcare.googleapis.com"
            - name: ALLOWED_PATH_PREFIX
              value: /
            - name: REMOVE_SCOPES
              value: openid
            - name: SERVICE_ACCOUNT_NAME
              value: fhiruser@{{.project_id}}.iam.gserviceaccount.com
            - name: USE_USERINFO_TO_VERIFY_ACCESSTOKEN
              value: "{{.use_userinfo_to_verify_accesstoken}}"
            - name: CACHE_ADDR
              value: {{.cache_addr}}
            - name: USE_SECRET_MANAGER
              value: "{{.use_secret_manager}}"
          readinessProbe:
            httpGet:
              port: 8080
              path: /liveness_check
---
apiVersion: v1
kind: Service
metadata:
  name: fhirproxy-service
  labels:
    app: fhirproxy
spec:
  type: NodePort
  selector:
    app: fhirproxy
    tier: web
  ports:
    - name: public
      port: 8080
      targetPort: 8080
